# echo "Running ESLint..."
# npx eslint "src/**/*.{js,ts}" || exit 1


# echo "ESLint Passed! Proceeding with commit..."

#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "üîç Running ESLint on changed files..."

# Get changed JavaScript/TypeScript files (staged files only)
FILES=$(git diff --cached --name-only --diff-filter=d | grep -E '\.(js|ts|tsx)$')

# If no JS/TS files changed, skip ESLint
if [ -z "$FILES" ]; then
  echo "‚úÖ No JavaScript/TypeScript files changed. Skipping ESLint."
  exit 0
fi

echo "üìÇ Files to lint: $FILES"

# Run ESLint with auto-fix
npx eslint --fix $FILES
STATUS=$?

if [ $STATUS -ne 0 ]; then
  echo "‚ùå ESLint found errors! Fix them before committing."
  exit 1
fi

echo "‚úÖ ESLint Passed! Proceeding with commit..."
exit 0
